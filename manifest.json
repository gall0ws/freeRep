{
  "manifest_version": 2,
  "name": "free Rep:",
  "version": "1.6",
  "description": "Bypass Rep: paywall.",
  "icons": {
    "48": "icons/freeRep-48.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*.repubblica.it/*",
    "https://*.economist.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.repubblica.it/*",
        "https://*.lastampa.it/*",
        "https://*.gazzetta.it/*_preview.shtml*",
        "https://*.economist.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "freeRep.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
